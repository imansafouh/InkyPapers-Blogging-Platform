{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "typeRoots": [ "src/types", "./node_modules/@types"]
  },
  "include": [
    "src/**/*",
    "app.ts",
  ],
  "exclude": ["node_modules"]
}
